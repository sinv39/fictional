<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.cug.fictional.mapper.ApplicationMapper">

    <resultMap id="BaseResultMap" type="cn.edu.cug.fictional.entity.Application">
        <id column="id" property="id"/>
        <result column="student_id" property="studentId"/>
        <result column="real_name" property="realName"/>
        <result column="college" property="college"/>
        <result column="dormitory" property="dormitory"/>
        <result column="phone" property="phone"/>
        <result column="qq" property="qq"/>
        <result column="password" property="password"/>
        <result column="introduction" property="introduction"/>
        <result column="status" property="status"/>
        <result column="apply_time" property="applyTime"/>
        <result column="handle_time" property="handleTime"/>
        <result column="handler_id" property="handlerId"/>
        <result column="reject_reason" property="rejectReason"/>
    </resultMap>

    <insert id="insert" parameterType="cn.edu.cug.fictional.entity.Application"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_application (
            student_id, real_name, college, dormitory, phone, qq, password, introduction, status
        ) VALUES (
            #{studentId}, #{realName}, #{college}, #{dormitory}, #{phone}, #{qq}, #{password}, #{introduction}, #{status}
        )
    </insert>

    <select id="selectLatestByStudentId" resultMap="BaseResultMap">
        SELECT * FROM tb_application 
        WHERE student_id = #{studentId} 
        ORDER BY apply_time DESC 
        LIMIT 1
    </select>

    <select id="selectByStatusWithPage" resultMap="BaseResultMap">
        SELECT * FROM tb_application
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
        </where>
        ORDER BY apply_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countByStatus" resultType="long">
        SELECT COUNT(*) FROM tb_application
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
        </where>
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM tb_application WHERE id = #{id}
    </select>

    <update id="updateStatus">
        UPDATE tb_application 
        SET status = #{status}, 
            handle_time = NOW(), 
            handler_id = #{handlerId} 
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM tb_application WHERE id = #{id}
    </delete>

</mapper>

