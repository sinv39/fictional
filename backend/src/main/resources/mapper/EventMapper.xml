<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.cug.fictional.mapper.EventMapper">

    <resultMap id="BaseResultMap" type="cn.edu.cug.fictional.entity.Event">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="publisher_id" property="publisherId"/>
        <result column="publisher_name" property="publisherName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
    </resultMap>

    <insert id="insert" parameterType="cn.edu.cug.fictional.entity.Event"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_event (
            title, content, publisher_id, publisher_name, status
        ) VALUES (
            #{title}, #{content}, #{publisherId}, #{publisherName}, #{status}
        )
    </insert>

    <select id="selectWithPage" resultMap="BaseResultMap">
        SELECT * FROM tb_event 
        WHERE status = 1 
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM tb_event WHERE status = 1
    </select>

</mapper>

